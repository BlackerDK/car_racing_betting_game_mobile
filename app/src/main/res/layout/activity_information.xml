<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationUserActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/b1">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="131dp"
            android:layout_height="125dp"
            android:layout_marginBottom="85dp"
            android:background="@drawable/avatar"
            android:translationZ="1dp"
            app:circularflow_radiusInDP="20"
            app:layout_constraintBottom_toTopOf="@+id/tvBalance"
            app:layout_constraintHorizontal_bias="0.107"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.662"
            tools:ignore="MissingConstraints" />


        <ImageView
            android:id="@+id/background"
            android:layout_width="0dp"
            android:layout_height="224dp"
            android:background="@drawable/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="232dp"
            android:layout_marginEnd="8dp"
            android:text="Username"
            android:textColor="#251716"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintHorizontal_bias="0.186"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="73dp"
            android:layout_height="66dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="164dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vipcard" />

        <TextView
            android:id="@+id/tvBalance"
            android:layout_width="329dp"
            android:layout_height="60dp"
            android:background="@drawable/background"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:text="Your balance : 200"
            android:textColor="#251716"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background"
            app:layout_constraintVertical_bias="0.607" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="166dp"
            android:layout_height="51dp"
            android:layout_marginBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="More coins ? "
            android:textColor="#251716"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonStart"
            tools:layout_editor_absoluteX="124dp" />


        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="51dp"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/coinBtn"
            android:layout_width="95dp"
            android:layout_height="84dp"
            android:layout_marginStart="180dp"
            android:layout_marginBottom="44dp"
            android:background="@drawable/money"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toStartOf="@+id/buttonStart" />

        <ImageButton
            android:id="@+id/buttonStart"
            android:layout_width="175dp"
            android:layout_height="174dp"
            android:background="@drawable/startbutton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_width="73dp"
            android:layout_height="66dp"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/coinBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:srcCompat="@drawable/betting" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>

